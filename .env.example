NODE_ENV=development
PORT=3000
APP_NAME=MLM Auth
APP_URL=http://localhost:3000

# Prisma / Database (MySQL)
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DBNAME"

# JWT
JWT_SECRET=change-me-please
JWT_EXPIRES_IN=7d
JWT_REAUTH_EXPIRES_IN=10m

# CSRF (optional)
CSRF_COOKIE_NAME=_csrf
CSRF_PROTECTION=false

# Twilio (optional in dev)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SMTP (optional in dev)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=no-reply@example.com
