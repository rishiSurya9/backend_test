NODE_ENV=development
PORT=3000
APP_NAME=MLM Auth
APP_URL=http://localhost:3000

# Prisma / Database (MySQL)
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DBNAME"

# JWT
JWT_SECRET=change-me-please
JWT_EXPIRES_IN=7d
JWT_REAUTH_EXPIRES_IN=10m

# CSRF (optional)
CSRF_COOKIE_NAME=_csrf
CSRF_PROTECTION=false

# Twilio (optional in dev)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SMTP (optional in dev)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=no-reply@example.com

# Payments
# Razorpay (server-side order creation and webhook verification)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
# Razorpay payout (RazorpayX) account number
RAZORPAY_ACCOUNT_NUMBER=

# Stripe (webhook verification)
STRIPE_WEBHOOK_SECRET=

# Wallet
MIN_WITHDRAW_AMOUNT=100
WITHDRAW_ADMIN_THRESHOLD=5000

# Admin controls (comma-separated)
ADMIN_USER_IDS=
ADMIN_EMAILS=

# FX & Token sale plans
USD_INR_RATE=83
TOKEN_PRICE_USD=1
PLAN_STARTER_USD=10
PLAN_GROWTH_USD=25
PLAN_PRO_USD=50
PLAN_ELITE_USD=100
